<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageContact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_width="0dp"
            app:civ_shadow_radius="9dp"
            app:civ_shadow_color="#3f51b5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_profile"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textContactName"
            app:layout_constraintStart_toEndOf="@+id/imageContact"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:textStyle="bold"
            android:textColor="@android:color/black" android:textSize="16sp"/>
    <TextView
            android:text="contact description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textContactDescription"
            app:layout_constraintEnd_toEndOf="@+id/textContactName"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textContactName"
            app:layout_constraintStart_toStartOf="@+id/textContactName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            android:textColor="@android:color/tab_indicator_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>